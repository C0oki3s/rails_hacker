<%= link_to "Back", :back,class:"btn btn-dark",id:"btn_back" %>
<h2 style="text-align: center; margin-top: 10px; margin-bottom:20px;font-size: 50px;">Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<div class="shape">
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field" class="field form-group col-lg-4">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control",id:"my_g",placeholder:"Email" %><br/>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field" class="field form-group col-lg-4">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i>
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control",id:"my_g",placeholder:"New Password" %><br />
    <% if @minimum_password_length %>

      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field" class="field form-group col-lg-4">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control",id:"my_g",placeholder:"Confirm Password" %><br />
  </div>

  <div class="field" class="field form-group col-lg-4">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control",id:"my_g",placeholder:"Password" %>
  </div>

  <div class="actions" style="margin-top: 10px; margin-bottom: 10px;">
    <%= f.submit "Update",class:"btn btn-dark" %>
  </div>
</div>
<% end %>


<h3 style="text-align: center; margin-top: 10px;">Cancel my account</h3>

<p style="text-align: center;">Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete,class:"btn btn-danger", id:"edit_btn"%></p>

